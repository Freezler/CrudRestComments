<%- include('../partials/head')%>

    <%- include('../partials/navbar')%>
        <main
            class="container-fluid mt-5 d-flex flex-column items-center justify-center rounded-lg p-5 border border-dark mx-auto">
            <section>
                <h1>Editing <%=comment.username%>'s comment</h1>
                <p class=" mb-3">Comment id: <%= comment.id %>
                </>
                <hr class="w-100">

            </section>
            <section>
                <form method="POST" action="/comments/<%=comment.id%>?_method=PATCH">
                    <textarea name="comment" id="" class="form-control " cols="30" rows="5"
                        aria-describedby="new comment tex"><%= comment.comment %></textarea>
                    <hr class="w-100">
                    <button type="submit" class="mt-3 btn btn-outline-dark">Save</button>
                    <a href="/comments"><button type="button" class="btn btn-outline-dark mt-3">Back</button> </a>

                </form>

            </section>
        </main>
        <%- include('../partials/footer')%>